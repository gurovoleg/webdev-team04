mixin button(text, link)
	a(class="button" href=link) #{text}
mixin button--edit(text,	link)
	a(class="button--edit" href=link) #{text}
mixin button--remove(text,	link)
	a(class="button--remove" href=link) #{text}
mixin button--save(text,	link)
	a(class="button--save" href=link) #{text}
mixin button--enter(text,	link)
	a(class="button--enter" href=link) #{text}
mixin button--profile(text,	link)
	a(class="button--profile" href=link) #{text}
mixin small__button(text,	link)
	a(class="small__button" href=link) #{text}
mixin small__button--edit(text,	link)
	a(class="small__button--edit" href=link) #{text}
mixin small__button--remove(text,	link)
	a(class="small__button--remove" href=link) #{text}
mixin small__button--save(text,	link)
	a(class="small__button--save" href=link) #{text}