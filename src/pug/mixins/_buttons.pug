mixin button(text, link)
	a(class="button" href=link) #{text}

mixin button-arrow(text, link)
	a(class="button" href=link) #{text}
		i.fas.fa-arrow-right

mixin button-edit(text, link)
	a(class="button button--edit" href=link) #{text}

mixin button-remove(text, link)
	a(class="button button--remove" href=link) #{text}

mixin button-save(text, link)
	a(class="button button--save" href=link) #{text}

mixin button-enter(text, link)
	a(class="button button--enter" href=link) #{text}

mixin button-profile(text, link)
	a(class="button button--profile" href=link) #{text}

mixin button-small(text, link)
	a(class="button button--small" href=link) #{text}

mixin button-editsmall(text, link)
	a(class="button button--small button--editsmall" href=link) #{text}

mixin button-savesmall(text, link)
	a(class="button button--small button--savesmall" href=link) #{text}
	
mixin button-removesmall(text, link)
	a(class="button button--small button--removesmall" href=link) #{text}			