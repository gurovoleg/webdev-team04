mixin checkbox(name, text, status)
		if status === 'checked'
			.form-checkbox
				label.label-checkbox
					input.checkbox(type='checkbox', name = name, checked)
					span.checkmark
					| #{text}
		else
			.form-checkbox
				label.label-checkbox
					input.checkbox(type='checkbox', name = name)
					span.checkmark
					| #{text}

mixin input(name, type, placeholder,label)
	div.form-group
		label.label #{label}
			input.input(name=name,type=type, placeholder=placeholder)
			
mixin textArea(name, type, placeholder,label)
	div.form-group
		label.label #{label}
		textarea.textarea(name=name,type=type, placeholder=placeholder)

mixin formInput(id, method, action, textButton, labelText)
	form.file-upload(id=id, method=method, action=action)
		input.file__upload-input(type="file")
		button.file__upload-button #{textButton}
		label.file__upload-text #{labelText}