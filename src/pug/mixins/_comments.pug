mixin comments-item(imgSrc,userName, date, time, text)
	
	.comments-item
		.avatar-block
			.avatar.avatar--small
				img(src="../img/avatars/"+ imgSrc alt="avatar")
		.comment-item__content
			.comment-item__top
				.user-name #{userName}
				.comment-item__date
					span
						i.far.fa-clock
					span  #{date} года в #{time}
			.comment-item__text.
				#{text}


mixin comments-item-no-avatar(userName, date, time, text)
	
	.comments-item
		.comment-item__content
			.comment-item__top
				a(href="#").user-name-href #{userName}
				.comment-item__date
					span
						i.far.fa-clock
					span  #{date} года в #{time}
			.comment-item__text.
				#{text}