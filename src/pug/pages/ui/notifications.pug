extends ../../layouts/ui-layout.pug

block variables
	- var title = 'Уведомления - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title Уведомления
			
			h3.mb-10 Успех
			.notify.notify--success Запись создана успешно!

			pre.
				.notify.notify--success Запись создана успешно!				
			
			h3.mb-10.mt-10 Обновление
			.notify.notify--update Информация обновлена
			
			pre.
				.notify.notify--update Информация обновлена

			h3.mb-10.mt-10 Ошибка
			.notify.notify--error Комментарий не может быть пустым

			pre.
				.notify.notify--error Комментарий не может быть пустым						
			
			h3.mb-10.mt-10 Ошибка Email
			div
				.notify.notify--error.no-radius-bottom Данный email уже занят
				.notify.no-radius-top
					p Используйте другой email чтобы создать новый аккаунт.
					p 
						| Или воспользуйтесь 
						a(href="#!") восстановлением пароля 
						|, чтобы войти на сайт. 
				pre(class="mb-50").
					.notify.notify--error.no-radius-bottom Данный email уже занят
					.notify.no-radius-top
						p Используйте другой email чтобы создать новый аккаунт.
						p 
							| Или воспользуйтесь 
							a(href="#!") восстановлением пароля 
							|, чтобы войти на сайт.
