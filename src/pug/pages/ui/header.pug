extends ../../layouts/ui-layout.pug

block variables
	- var title = 'Шапка общая - UI-kit и HTML фреймворк - Документация'
	- var pageClass = 'body--dashboard'

block content
	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			.title Шапка общая
				p Шапка-гость 
			header.header.header-guest
				.header_container
					.header_top
						+logo('Digital Lifestyle','Сайт IT специалиста')
						div.header_registration
							+link('Регистрация', '#').header_registration-link
							+link('Вход', '#').header_registration-link
					nav.header_nav
						ul
							+linkNav('Главная', '#')
							+linkNav('Обо мне', '#')
							+linkNav('Работы', '#')
							+linkNav('Блог', '#').header__nav-active
							+linkNav('Контакты', '#')
			
			p Шапка-Администратора  
			header.header.header-admin
				.header_admin-container
					.header_top
						+logo('Digital Lifestyle','Сайт IT специалиста')
					nav.header_nav
						ul
							+linkNav('Главная', '#')
							+linkNav('Обо мне', '#')
							+linkNav('Работы', '#')
							+linkNav('Блог', '#')
							+linkNav('Контакты','#')
							
			p Шапка-Пользователь 
			header.header-user.header
				.header_container.header-container-user
					.header_top
						+logo('Digital Lifestyle','Сайт IT специалиста')
						div.header_right-col
							div.header-avatar
								+avatar-small('photo-big.jpg')
							div.header-user
								p.header-user-name
									|	Юрий Ключевский
								span пользователь
								div.header-user-but
									+button-profile('Профиль', '#')
									+button-profile('Выход', '#')
					nav.header_nav
						ul
							+linkNav('Главная', '#')
							+linkNav('Обо мне', '#')
							+linkNav('Работы', '#')
							+linkNav('Блог', '#').header__nav-active
							+linkNav('Контакты', '#')
					
					//	include ../../sections/header.pug

		.section-ui.mt-20
			.title-medium Подключение из файла
		pre include ../../sections/header.pug