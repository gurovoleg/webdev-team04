extends ../../layouts/ui-layout.pug

block variables
	- var title = 'Комментарии - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	include ../../sections/ui-nav-inside-ui.pug

	.main-wrapper
		.container.container--left
			h4.mb-50.mt-50 Комментарии
			.comments-title.mb-25 2 комментария
			.comments-item
				.avatar-block
					+avatar-small('avatar-2.jpg')
				+comment-item__content('Джон До', '05 мая 2017', '15:45', 'Замечательный парк, обязательно отправлюсь туда этим летом.')

			.comments-item
				.avatar-block
					+avatar-small('avatar-3.jpg')
				+comment-item__content('Джон До', '05 мая 2017', '15:45', 'Замечательный парк, обязательно отправлюсь туда этим летом.')

			pre.
				.comments-item
					.avatar-block
						+avatar-small('avatar-2.jpg')
					+comment-item__content('Джон До', '05 мая 2017', '15:45', 'Замечательный парк, обязательно отправлюсь туда этим летом.')


				mixin comment-item__content(userName, date, time, text)
	
					.comment-item__content
						.comment-item__top
							.user-name # {userName}
							.comment-item__date
								span
									i.far.fa-clock
								span # {date} года в # {time}
						.comment-item__text.
							 # {text}